{
  "name": "lizard-linter",
  "displayName": "lizard-linter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lizard-linter.helloWorld",
    "onCommand:lizard-linter.lint",
    "workspaceContains:**/*.c",
    "workspaceContains:**/*.h",
    "workspaceContains:**/*.cpp",
    "workspaceContains:**/*.cs",
    "workspaceContains:**/*.gd",
    "workspaceContains:**/*.go",
    "workspaceContains:**/*.java",
    "workspaceContains:**/*.js",
    "workspaceContains:**/*.lua",
    "workspaceContains:**/*.m",
    "workspaceContains:**/*.php",
    "workspaceContains:**/*.py",
    "workspaceContains:**/*.rb",
    "workspaceContains:**/*.rs",
    "workspaceContains:**/*.scala",
    "workspaceContains:**/*.swift"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lizard-linter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "lizard-linter.lint",
        "title": "Execute lint"
      }
    ],
    "configuration": {
      "title": "Thresholds",
      "properties": {
        "thresholds.cyclomaticComplexity": {
          "type": "number",
          "default": 2,
          "description": "Cyclomatic complexity threshold."
        },
        "thresholds.tokenCount": {
          "type": "number",
          "default": 2,
          "description": "Token count"
        },
        "thresholds.numOfParameters": {
          "type": "number",
          "default": 2,
          "description": "Number of parameters"
        },
        "thresholds.ExecuteLizardLintOnFileSave": {
          "type": "boolean",
          "default": true,
          "description": "Execute lizard linter on file save"
        },
        "thresholds.logFilePath": {
          "type": "string",
          "default": ".log/lizard/",
          "description": "Execute lizard linter on file save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "path": "^0.12.7"
  }
}
